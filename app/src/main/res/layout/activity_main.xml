<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <!-- Top Bar with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_arrow_back_ios_new_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Withdrawal Details"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTransactionType"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_arrow_upward_24"
                app:tint="@color/black" />

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-8dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="Completed"
            android:textColor="@color/success_green" />

        <!-- Amount Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="+ 500 USDT"
            style="@style/TextAppearance.Transaction.Amount" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="64,649.58 KES"
            style="@style/TextAppearance.Transaction.Subtitle" />

        <!-- Add this divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@color/divider_color" />

        <!-- Network Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Network"
            style="@style/TextAppearance.Transaction.Label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="Tron (TRC-20)"
            style="@style/TextAppearance.Transaction.Value" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="From"
                style="@style/TextAppearance.Transaction.Label" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="TNmSDQtWEQ4Ecypv5XkjEDtsD1en12P7Zg"
                style="@style/TextAppearance.Transaction.Value" />

            <TextView
                android:id="@+id/btnFromShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Share"
                android:padding="12dp"
                android:textAllCaps="false"
                android:textColor="@color/share_green"
                android:background="@drawable/bg_share_button"/>
        </LinearLayout>



        <!-- And for the TX Hash section: -->


        <!-- Date Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Date"
            style="@style/TextAppearance.Transaction.Label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="08:43, 23 December 2024"
            style="@style/TextAppearance.Transaction.Value" />

        <!-- Sent Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Sent"
            style="@style/TextAppearance.Transaction.Label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="500 USDT / 64,649.58 KES"
            style="@style/TextAppearance.Transaction.Value" />

        <!-- Fee Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Fee"
            style="@style/TextAppearance.Transaction.Label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="0 USDT / 0 KES"
            style="@style/TextAppearance.Transaction.Value" />

        <!-- Transaction Hash Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="TX Hash"
            style="@style/TextAppearance.Transaction.Label" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="d82ee83e272c2edf7d2e10f126ab78cd74ae3795cedd0a22780ed0f9f546a752"
                style="@style/TextAppearance.Transaction.Value" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBlockchain"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:text="Blockchain"
                android:textAllCaps="false"
                android:textColor="@color/share_green"
                app:backgroundTint="@color/share_background"
                app:strokeColor="@color/share_background"
                app:strokeWidth="2dp"
                app:icon="@drawable/outline_ios_share_24"
                app:iconGravity="start"
                app:iconSize="18dp"
                android:gravity="center"
                app:iconTint="@color/share_green" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/share_green"
                app:backgroundTint="@color/share_background"
                app:strokeColor="@color/share_background"
                app:strokeWidth="2dp" />

        </LinearLayout>



    </LinearLayout>
</ScrollView>