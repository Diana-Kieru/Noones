<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.Transaction.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_subheading</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Transaction.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Transaction.Amount" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Transaction.Label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Transaction.Value" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Transaction" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Share" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/share_button_background</item>
        <item name="android:textColor">@color/share_green</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Button.Transaction.Material" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textColor">@color/share_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/share_background</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">2dp</item>
        <item name="iconTint">@color/share_green</item>
        <item name="iconPadding">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>
</resources>